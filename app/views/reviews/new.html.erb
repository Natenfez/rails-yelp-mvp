<h1>Add a Review for <%= @restaurant.name %></h1>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, collection: (0..5).to_a %>
  <%= f.button :submit, "Submit", class: "btn btn-info" %>
<% end %>

<%= link_to "Back to Restaurant", restaurant_path(@restaurant), class: "btn btn-primary" %>
